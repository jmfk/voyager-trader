#!/bin/bash
# VOYAGER-Trader Environment Variables Template
# Copy this file to .env and fill in your API keys
# cp .env.template .env

# =========================================
# Core LLM Providers (at least one required)
# =========================================
export OPENAI_API_KEY="your-openai-api-key-here"
export ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# =========================================
# Market Data APIs (optional)
# =========================================
export ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key-here"

# =========================================
# Cloud AI Providers (optional)
# =========================================
# export AZURE_OPENAI_API_KEY="your-azure-openai-key-here"
# export AZURE_OPENAI_ENDPOINT="your-azure-endpoint-here"
export GOOGLE_AI_API_KEY="your-google-ai-key-here"
export HUGGINGFACE_API_KEY="your-huggingface-key-here"

# =========================================
# Admin Interface Security
# =========================================
# Generate a secure JWT secret (will auto-generate if not set)
export VOYAGER_JWT_SECRET="$(openssl rand -base64 32 2>/dev/null || python3 -c 'import secrets; print(secrets.token_urlsafe(32))')"
export VOYAGER_JWT_EXPIRE_MINUTES="30"

# Admin credentials (CHANGE FOR PRODUCTION!)
export VOYAGER_ADMIN_PASSWORD="your-secure-admin-password"
# Or set pre-hashed password (takes precedence):
# export VOYAGER_ADMIN_PASSWORD_HASH="$2b$12$your-bcrypt-hash-here"

# CORS origins for production (comma-separated)
export VOYAGER_CORS_ORIGINS="https://your-domain.com,https://admin.your-domain.com"

# =========================================
# Trading Configuration (optional)
# =========================================
# export VOYAGER_TRADING_MODE="paper"  # paper, live
# export VOYAGER_MAX_POSITION_SIZE="1000"
# export VOYAGER_RISK_TOLERANCE="medium"  # low, medium, high

echo '‚úÖ VOYAGER-Trader environment variables loaded!'
echo 'üí° Run "make config-check" to verify configuration'
echo 'üîê JWT Secret configured for admin interface security'