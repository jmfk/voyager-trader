# VOYAGER Trader Persistence Configuration Example
# Copy this file to .env and modify values as needed

# ============================================================================
# SYSTEM SETTINGS
# ============================================================================

# Runtime environment: development, testing, staging, production
VOYAGER_ENVIRONMENT=development

# Enable debug mode
VOYAGER_DEBUG=false

# System log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
VOYAGER_LOG_LEVEL=INFO

# Feature flags
VOYAGER_ENABLE_PERSISTENCE=true
VOYAGER_ENABLE_AUDIT_LOGGING=true
VOYAGER_ENABLE_METRICS=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database connection URL
# SQLite (default): sqlite:///voyager_trader.db
# PostgreSQL: postgresql://user:password@localhost:5432/voyager_trader
# MySQL: mysql://user:password@localhost:3306/voyager_trader
DATABASE_URL=sqlite:///voyager_trader.db

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Connection timeouts (seconds)
DB_CONNECT_TIMEOUT=30.0
DB_QUERY_TIMEOUT=60.0

# Backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_DIRECTORY=./backups
DB_BACKUP_INTERVAL_HOURS=24
DB_BACKUP_RETENTION_DAYS=30

# Performance settings
DB_ENABLE_WAL_MODE=true
DB_ENABLE_FOREIGN_KEYS=true
DB_CACHE_SIZE_MB=64

# ============================================================================
# AUDIT LOGGING CONFIGURATION
# ============================================================================

# Enable audit logging
AUDIT_ENABLED=true

# Audit log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
AUDIT_LOG_LEVEL=INFO

# Audit retention period (days)
AUDIT_RETENTION_DAYS=365

# What to audit
AUDIT_ALL_ENTITIES=true
AUDIT_USER_ACTIONS=true
AUDIT_SYSTEM_EVENTS=true
AUDIT_TRADING_OPERATIONS=true
AUDIT_CONFIG_CHANGES=true

# Performance settings
AUDIT_BATCH_SIZE=100
AUDIT_ASYNC_LOGGING=true

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT settings
VOYAGER_JWT_SECRET=your-secret-key-here-change-this-in-production
VOYAGER_JWT_ALGORITHM=HS256
VOYAGER_JWT_EXPIRE_MINUTES=30

# Password requirements
PASSWORD_MIN_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS settings (comma-separated)
VOYAGER_CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
CORS_CREDENTIALS=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_SIZE_MB=128

# Connection settings
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30.0

# Query optimization
QUERY_BATCH_SIZE=1000
ENABLE_QUERY_LOGGING=false

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Risk management (percentages)
MAX_POSITION_SIZE_PERCENT=5.0
MAX_PORTFOLIO_RISK_PERCENT=2.0
DAILY_LOSS_LIMIT_PERCENT=5.0

# Order management
DEFAULT_ORDER_TIMEOUT_MINUTES=60
ENABLE_POSITION_TRACKING=true
ENABLE_PNL_CALCULATION=true

# ============================================================================
# PRODUCTION SECURITY RECOMMENDATIONS
# ============================================================================
# 
# For production environments, consider these additional security measures:
#
# 1. Generate a strong JWT secret:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. Use a dedicated database:
#    DATABASE_URL=postgresql://voyager_user:strong_password@db.example.com:5432/voyager_trader_prod
#
# 3. Enable backup encryption:
#    DB_BACKUP_ENCRYPTION=true
#    DB_BACKUP_ENCRYPTION_KEY=your-encryption-key-here
#
# 4. Use secure CORS origins:
#    VOYAGER_CORS_ORIGINS=https://voyager.yourcompany.com
#
# 5. Enable strict rate limiting:
#    RATE_LIMIT_PER_MINUTE=10
#
# 6. Use strong password requirements:
#    PASSWORD_MIN_LENGTH=12
#    REQUIRE_PASSWORD_COMPLEXITY=true
#
# 7. Set appropriate audit retention:
#    AUDIT_RETENTION_DAYS=2555  # 7 years for regulatory compliance
#
# ============================================================================